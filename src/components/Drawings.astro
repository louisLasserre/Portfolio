---
const { data } = Astro.props;
---

<div class="flex w-5/6 mx-auto justify-between gap-4 flex-col sm:flex-row">
  {
    data.map((element) => {
      const { title, description, Icon } = element;
      return (
        <div class="w-full p-4">
          <div class="w-[70%]  aspect-square mx-auto grid place-items-center ">
            <Icon />
          </div>
          <h3 class="text-secondary underline-secondary text-lg">{title}</h3>
          <p>{description}</p>
        </div>
      );
    })
  }
</div>
